<div class="col-md-3">
  <div class="sidebar-widget category">
    <h2 class="title">Category</h2>
    <ul>
      {{#each categories}}
      <li><a href="/products?category={{dataValues.id}}">{{dataValues.name}}</a><span>({{dataValues.Products.length}})</span></li>
      {{/each}}
    </ul>
  </div>

  <div class="sidebar-widget brands">
    <h2 class="title">Our Brands</h2>
    <ul>
      {{#each brands}}
      <li><a href="/products?brand={{dataValues.id}}">{{dataValues.name}} </a><span>{{dataValues.Products.length}}</span></li>
      {{/each}}
    </ul>
  </div>

  <div class="sidebar-widget tag">
    <h2 class="title">Tags Cloud</h2>
    {{#each tags}}
    <a href="/products?tag={{dataValues.id}}">{{dataValues.name}}</a>
    {{/each}}
  </div>
</div>