<!-- Breadcrumb Start -->
<div class="breadcrumb-wrap">
  <div class="container">
    <ul class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item"><a href="#">Products</a></li>
      <li class="breadcrumb-item active">Cart</li>
    </ul>
  </div>
</div>
<!-- Breadcrumb End -->

<!-- Cart Start -->
<div class="cart-page">
  <div class="container">
    {{#if cart.items.length}}
    <div class="row">
      <div class="col-md-12">
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead class="thead-dark">
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Remove</th>
              </tr>
            </thead>
            <tbody class="align-middle">

              {{#each cart.items}}
              <tr id="cart-item-{{product.id}}-row">
                <td><a href="/products/{{product.id}}"><img
                      src="{{product.imagePath}}"
                      alt="{{product.name}}"
                    /></a></td>
                <td><a href="/products/{{product.id}}">{{product.name}}</a></td>
                <td>${{product.price}}</td>
                <td>
                  <div class="qty">
                    <button class="btn-minus" onclick="updateItem({{{product.id}}}, parseInt(document.getElementById('item-{{product.id}}-input').value) - 1)"><i
                        class="fa fa-minus"
                      ></i></button>
                    <input id="item-{{product.id}}-input" type="number" value="{{quantity}}" readonly/>
                    <button class="btn-plus" onclick="updateItem({{product.id}}, parseInt(document.getElementById('item-{{product.id}}-input').value) + 1)"><i class="fa fa-plus"></i></button>
                  </div>
                </td>
                <td id="item-{{product.id}}-total">${{total}}</td>
                <td><button onclick="removeItem({{product.id}})"><i class="fa fa-trash"></i></button></td>
              </tr>
              {{/each}}

            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="coupon">
          <input type="text" placeholder="Coupon Code" />
          <button>Apply Code</button>
        </div>
      </div>
      <div class="col-md-6">
        <div class="cart-summary">
          <div class="cart-content">
            <h3>Cart Summary</h3>
            <p>Sub Total<span id="cart-subtotal">${{cart.subtotal}}</span></p>
            <p>Shipping Cost<span>${{cart.shipping}}</span></p>
            <h4>Grand Total<span id="cart-grandtotal">${{cart.total}}</span></h4>
          </div>
          <div class="cart-btn">
            <button onclick="clearCart()">Clear Cart</button>
            <button onclick="location.href='/users/checkout'">Checkout</button>
          </div>
        </div>
      </div>
    </div>
    {{else}}
      <div class="text-center border py-3">
        <h3>Your cart is empty!</h3>
      </div>
    {{/if}}
  </div>
</div>
<!-- Cart End -->